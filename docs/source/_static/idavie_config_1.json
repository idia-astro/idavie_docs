{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "iDaVIE config",
    "description": "Schema for iDaVIE config files (Version 1)",
    "$id": "idavie_config_1",
    "definitions": {
        "colormap": {
            "type": "string",
            "enum": [
                "Accent",
                "Afmhot",
                "Autumn",
                "Binary",
                "Blues",
                "Bone",
                "BrBg",
                "Brg",
                "BuGn",
                "BuPu",
                "Bwr",
                "CmRmap",
                "Cool",
                "Coolwarm",
                "Copper",
                "Cubehelix",
                "Dark2",
                "Flag",
                "GistEarth",
                "GistGray",
                "GistHeat",
                "GistNcar",
                "GistRainbow",
                "GistStern",
                "GistYarg",
                "GnBu",
                "Gnuplot",
                "Gnuplot2",
                "Gray",
                "Greens",
                "Greys",
                "Hot",
                "Hsv",
                "Inferno",
                "Jet",
                "Magma",
                "NipySpectral",
                "Ocean",
                "Oranges",
                "OrRd",
                "Paired",
                "Pastel1",
                "Pastel2",
                "Pink",
                "PiYg",
                "Plasma",
                "PrGn",
                "Prism",
                "PuBu",
                "PuBuGn",
                "PuOr",
                "PuRd",
                "Purples",
                "Rainbow",
                "RdBu",
                "RdGy",
                "RdPu",
                "RdYlBu",
                "RdYlGn",
                "Reds",
                "Seismic",
                "Set1",
                "Set2",
                "Set3",
                "Spectral",
                "Spring",
                "Summer",
                "Tab10",
                "Tab20",
                "Tab20B",
                "Tab20C",
                "Terrain",
                "Viridis",
                "Winter",
                "Wistia",
                "YlGn",
                "YlGnBu",
                "YlOrBr",
                "YlOrRd",
                "Turbo",
                "None"
            ]
        },
        "scaling": {
            "type": "string",
            "enum": [
                "Linear",
                "Log",
                "Sqrt",
                "Square",
                "Power",
                "Gamma"
            ]
        },
        "renderConfig": {
            "type": "object",
            "properties": {
                "colormap": {
                    "$ref": "#/definitions/colormap"
                },
                "scaling": {
                    "$ref": "#/definitions/scaling"
                }
            }
        }
    },
    "properties": {
        "maxModeDownsampling": {
            "description": "Use maximum-mode downsampling when reducing cube size before uploading to the GPU.",
            "type": "boolean",
            "default": false
        },
        "foveatedRendering": {
            "description": "Use foveated rendering to improve rendering performance at the expense of image quality in the periphery.",
            "type": "boolean",
            "default": true
        },
        "bilinearFiltering": {
            "description": "Use bilinear filtering when sampling from the data texture on the GPU. Smooths cube appearance at the expense of performance.",
            "type": "boolean",
            "default": false
        },
        "gpuMemoryLimitMb": {
            "description": "Maximum size (in megabytes) of cubes uploaded to the GPU. Cubes larger than this limit will be downsampled before GPU upload.",
            "type": "integer",
            "minimum": 32,
            "maximum": 2048,
            "default": 256
        },
        "maxRaymarchingSteps": {
            "description": "Maximum number of raymarching steps to take when rendering the cube. A larger number of steps will improve cube appearance when large cubes are used, at the expense of performance.",
            "minimum": 16,
            "maximum": 2048,
            "default": 384
        },
        "voiceCommandConfidenceLevel": {
            "description": "Confidence level threshold to use when recognising voice commands.",
            "type": "string",
            "enum": [
                "High",
                "Medium",
                "Low",
                "Rejected"
            ],
            "default": "Low"
        },
        "defaultScalingType": {
            "description": "Default scaling type to use apply when loading a new cube.",
            "type": "string",
            "$ref": "#/definitions/scaling"
        },
        "defaultColorMap": {
            "description": "Default color map to apply when loading a new cube.",
            "$ref": "#/definitions/colormap",
            "default": "Inferno"
        },
        "momentMap": {
            "type": "object",
            "description": "Moment map configuration",
            "properties": {
                "m0": {
                    "description": "Render configuration for M0",
                    "$ref": "#/definitions/renderConfig",
                    "default": {
                        "colormap": "Plasma",
                        "scaling": "Sqrt"
                    }
                },
                "m1": {
                    "description": "Render configuration for M0",
                    "$ref": "#/definitions/renderConfig",
                    "default": {
                        "colormap": "Turbo",
                        "scaling": "Linear"
                    }
                }
            }
        }
    }
}
